<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonNewDelivery"
            android:layout_width="234dp"
            android:layout_height="71dp"
            android:background="#303F9F"
            android:text="Start New Delivery"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonExitApp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/checkbox"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textDeliveryComplete"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/textDeliveryComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:inputType="textPersonName"
            android:singleLine="false"
            android:text="Delivery Complete!"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:background="@android:color/transparent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="47dp" />

        <Button
            android:id="@+id/buttonExitApp"
            android:layout_width="234dp"
            android:layout_height="71dp"
            android:background="#303F9F"
            android:text="Exit WaferNav"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="42dp"
            app:layout_constraintHorizontal_bias="0.496" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>