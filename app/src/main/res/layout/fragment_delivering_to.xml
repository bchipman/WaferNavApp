<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nielsenninjas.wafernav.DeliveringToFragment"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textViewCurrentlyDeliveringToTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivering to: "
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.045"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
            android:id="@+id/textViewHandlerIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Barcode ID:"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
        tools:layout_editor_absoluteY="182dp"
        tools:layout_editor_absoluteX="40dp" />

    <TextView
        android:id="@+id/textViewHandlerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textColor="#3235e5"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/textViewSiteNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Name:"
        android:textColor="#3235e5"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
            android:id="@+id/textViewSiteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
        tools:layout_editor_absoluteY="183dp"
        tools:layout_editor_absoluteX="226dp" />

    <TextView
            android:id="@+id/textViewSiteDescriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
        android:text="Description:"
        tools:layout_editor_absoluteY="274dp"
        tools:layout_editor_absoluteX="40dp" />

    <TextView
            android:id="@+id/textViewSiteDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
        tools:layout_editor_absoluteY="268dp"
        tools:layout_editor_absoluteX="226dp" />

    <TextView
            android:id="@+id/textViewSiteLocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Location:"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
        tools:layout_editor_absoluteY="361dp"
        tools:layout_editor_absoluteX="40dp" />

    <TextView
            android:id="@+id/textViewSiteLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
        tools:layout_editor_absoluteY="348dp"
        tools:layout_editor_absoluteX="226dp" />

    <Button
        android:id="@+id/confirmDeliveryButton"
        android:layout_width="244dp"
        android:layout_height="74dp"
        android:background="#303F9F"
        android:text="Confirm Delivery"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteY="460dp"
        tools:layout_editor_absoluteX="83dp" />
</android.support.constraint.ConstraintLayout>
