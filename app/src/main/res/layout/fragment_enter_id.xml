<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.nielsenninjas.wafernav.EnterIdFragment"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
        >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextViewId"
            android:layout_width="236dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:completionThreshold="1"
            android:hint="Enter ID"
            android:inputType="number"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewId"
            app:layout_constraintHorizontal_bias="0.496" />

        <Button
            android:id="@+id/buttonPublish"
            android:layout_width="262dp"
            android:layout_height="68dp"
            android:background="#303F9F"
            android:onClick="publishButtonHandler"
            android:text="Submit Barcode ID"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/startDelivery"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextViewId"
            android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="0.506"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/buttonReadBarcode"
            android:layout_width="165dp"
            android:layout_height="70dp"
            android:background="#303F9F"
            android:clickable="false"
            android:onClick="ReadBarcodeButtonHandler"
            android:text="Scan"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewId"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textViewId"
            android:layout_width="126dp"
            android:layout_height="32dp"
            android:layout_weight="3"
            android:text="Barcode ID"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="200dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="197dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Scan all barcodes"
            android:textSize="24sp"
            android:textStyle="italic"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/startDelivery"
            android:layout_width="262dp"
            android:layout_height="74dp"
            android:background="@android:color/holo_green_dark"
            android:text="Start Delivery"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
